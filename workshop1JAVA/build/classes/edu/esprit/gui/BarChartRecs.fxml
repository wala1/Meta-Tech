<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="691.0" prefWidth="852.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.esprit.gui.BarChartRecsController">
   <children>
      <BarChart fx:id="RecBarChart" layoutX="40.0" layoutY="25.0" prefHeight="606.0" prefWidth="778.0" title="States Chart">
        <xAxis>
          <CategoryAxis fx:id="stateAxis" label="State" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="countAxis" label="Number" side="LEFT" />
        </yAxis>
      </BarChart>
      
      <Button fx:id="loadChart" layoutX="389.0" layoutY="636.0" mnemonicParsing="false" onMouseClicked="#loadchart" text="Load Chart">
         <effect>
            <DropShadow />
         </effect>
         <font>
            <Font name="Bodoni MT Black" size="16.0" />
         </font></Button>
      <ImageView fitHeight="19.0" fitWidth="20.0" layoutX="14.0" layoutY="12.0" onMouseClicked="#back" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../gui/images/curve-arrow.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
