{% extends 'baseAdmin.html.twig' %}


{% block body %}

<center style="margin-top: 5cm; margin-left: 2cm;">
    <div style="width: 10cm; margin-top: 2cm; margin-bottom: -2cm; margin-left: 2.2cm;">
        {% for message in app.flashes('info') %}
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                {{ message }}
