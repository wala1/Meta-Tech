        {% endfor %}
    </div>
    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
            <div class="row" style="margin-left:3px;margin-right:3px;">
                <div class="col-sm-6" style="width:11cm;">
                    <div class="card">
                    <center><div class="card-header" style="background: #fffdfd;width: 8cm;"><h4 style="margin-left:-3.5cm;font-size: 22px;" class="card-title">Shipping Address</h5></div>
                    </center>
                        <div class="card-body">
					            <table style="margin-left: -8cm; margin-right: -8cm; width: 9cm;">
