{% extends 'baseAdmin.html.twig' %}

{% block title %}
	<title>Ajouter Produit</title>
{% endblock %}

{% block body %}


			<!-- ============================================================== -->
			<!-- Start right Content here -->
			<!-- ============================================================== -->
            <div class="main-content"> 
                <div class="page-content">
                    <div class="container-fluid">
						{% if table=="produits" %}
							<a href="{{ path('admin_product')}} " type="button" class="btn btn-primary waves-effect waves-light"> 
								Retour
							</a> 
						{% elseif table=="categories" %}
							<a href="{{ path('admin_categorie')}} " type="button" class="btn btn-primary waves-effect waves-light"> 
								Retour
							</a>
						{% elseif table=="souscategories" %}
							<a href="{{ path('admin_souscategorie')}} " type="button" class="btn btn-primary waves-effect waves-light"> 
								Retour
							</a>
						{% endif %}
						
						<center>
						<h2>
						

					<!-- =================== AJOUTER PRODUIT ====================== -->
						{% if table=="produits" %}

							{% if editMode %}
								Modifier Produit
							{% else %}
								Ajouter Produit

							{% endif %}</h2>


							<div>
							{{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

								<table  style="width : 80%">
									<tr>
										<td rowspan="1" style="padding:1%">
											{% if produit_details is defined %}	
												{% for prod in produit_details %}				
													{% if prod.id == id %}
														{% if prod.modelProd != "" %}
															{{prod.modelProd | raw }}
														{% else %}
															<center>
																<img style="width : 20rem" alt="main product photo" class="gallery-placeholder__image" src="{{prod.imageProd}}"/>



															</center>
														{% endif %}
													{% endif %}
												{% endfor %}
											{% else %}
												<center>
													<div style="border : 1px solid gray ; height : 200px ; width: 200px ;      ">
														<div style="padding : 2% ; padding-top : 35% ;  ">
														Insert an image or a 3D model.
														<div>
													</div>
												</center>
											{% endif %}
										</td>

										<br>

										<td style="padding:1%">
											{{ form_label(form.nom_prod,"Nom ") }}
											{{ form_widget(form.nom_prod) }}
											{{ form_errors(form.nom_prod) }}
										 

											<br> 

										 
											{{ form_label(form.desc_prod,"Description ") }}
											{{ form_widget(form.desc_prod) }} 
											{{ form_errors(form.desc_prod) }}
										 

											<br>

											{{ form_label(form.image_prod,"Image ") }}
											{{ form_widget(form.image_prod) }}
											{{ form_errors(form.image_prod) }}

										 
											
										</td>

										<br>
									</tr>

									<tr>
										<td style="padding:1%">
											{{ form_label(form.prix_prod,"Prix ") }}
											{{ form_widget(form.prix_prod) }}
											{{ form_errors(form.prix_prod) }}
											<br>

											{{ form_label(form.promo_prod,"Promotion ") }}
											{{ form_widget(form.promo_prod) }}
											{{ form_errors(form.promo_prod) }}
											<br> 
										</td>   
										
											
										<td style="padding:1%">
											{{ form_label(form.sousCategProd,"Sous Catégorie ") }}
											{{ form_widget(form.sousCategProd) }}
											{{ form_errors(form.sousCategProd) }}
											<br> 
										
											{{ form_label(form.categorie_prod,"Catégorie ") }}
											{{ form_widget(form.categorie_prod) }}
											{{ form_errors(form.categorie_prod) }}
											<br> 
										</td>
										
									<tr >
										<td colspan="2" style="padding:1%">
											{{ form_label(form.model_prod,"Modele 3D") }}
												{{ form_widget(form.model_prod) }}
												{{ form_errors(form.model_prod) }}
												<br>  
										</td>
									</tr>


									</tr>
								</table>
								
								 



								{{ form_end(form) }}
							</div>




						<!-- =================== AJOUTER CATEGORIE ====================== -->
						{% elseif table=="categories" %}

						
							{% if editMode %}
								Modifier Categorie
							{% else %}
								Ajouter Categorie

							{% endif %}</h2><div style="width : 60%">

							{{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

							{{ form_label(form.nom_categorie,"Nom ") }} 
							{{ form_widget(form.nom_categorie) }}
							{{ form_errors(form.nom_categorie) }}


							<br>
							 
							{{ form_end(form) }}</div>
						
						<!-- =================== AJOUTER SOUS CATEGORIE ====================== -->
						{% elseif table=="souscategories" %}
							{% if editMode %}
								Modifier Sous Categorie
							{% else %}
								Ajouter Sous Categorie

							{% endif %}</h2><div style="width : 60%">

							{{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

							{{ form_label(form.nomSousCateg,"Nom Sous Categorie ") }} 
							{{ form_widget(form.nomSousCateg) }}
							{{ form_errors(form.nomSousCateg) }}


							<br>
							 
							{{ form_end(form) }}</div>


						{% endif %}

						</center>
                    </div>
                </div>
            </div>
{% endblock %}











 

