<script>
  
obj = JSON.parse(document.getElementById("tab_test").innerHTML) ; 
y = JSON.parse(document.getElementById("tab_count").innerHTML) ;

obj_sub = JSON.parse(document.getElementById("sub_table").innerHTML) ; 
y_sub = JSON.parse(document.getElementById("sub_count").innerHTML) ;

var xValues =  obj ; 
var yValues = y;

var xValues_sub =  obj_sub ; 
var yValues_sub = y_sub ;

var size = obj_sub.length ; 

if (obj.length > obj_sub.length ) {
    size = obj.length ; 
}
 
var rgb = []; 
for(var i = 0; i < xValues_sub.length ; i++) {
    rgb.push('#'+ Math.floor(Math.random() * 19777215).toString(16));   
}
var barColors =  rgb  ;



new Chart("myChart", {
                        type: "pie",
                        data: {
                            labels: xValues,
                            datasets: [
                                {
