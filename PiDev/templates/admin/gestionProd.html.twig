<!-- ===================== CATEGORIES ============================-->
{% if categories is defined and sous_categories is defined %}
    {% set categ_table = [] %}
    {% for categorie in categories %}
        {% set categ_table = categ_table|merge([categorie.nomCategorie]) %}
        
    {% endfor %}
    

    {% set categ_count = [] %}
    {% for s in categories %}
        {% set number = 0 %}
        {% for produit in produits %}

            
            {% if produit.categorie_prod  == s %}
                {% set number = number + 1 %}        
            {% endif %}
            

        {% endfor %}
        {% set categ_count = categ_count|merge([number]) %}
    {% endfor %}

    {% set categ_count = categ_count|merge([0]) %}


    <div style="display:none" id="tab_test" > 
        {{ categ_table|json_encode() }}
    </div>

    <div style="display:none" id="tab_count">

        {{ categ_count|json_encode() }}
    </div>


    <!-- ===================== CATEGORIES ============================-->

    {% set sub_table = [] %}
    {% for sous_categorie in sous_categories %} 
        {% set sub_table = sub_table|merge([sous_categorie.nomSousCateg]) %} 
    {% endfor %}


    {% set sub_count = [] %}
    {% for s in sous_categories %}
        {% set number = 0 %}
        {% for produit in produits %}


            {% if produit.sousCategProd  == s %}
                {% set number = number + 1 %}
            {% endif %}


        {% endfor %}
        {% set sub_count = sub_count|merge([number]) %}
    {% endfor %}

    {% set sub_count = sub_count|merge([0]) %}



    <div style="display:none" id="sub_table">
        {{ sub_table|json_encode() }}
    </div>

    <div style="display:none" id="sub_count">

        {{ sub_count|json_encode() }}
    </div>

{% endif %}

