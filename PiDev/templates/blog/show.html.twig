{% extends "base.html.twig" %}

{% block body %}
<section>
        {% for publication in publications %}
        <publication>
                <h2>{{ publication.titrePubl }}</h2>
                <div class="metadata">Ecrit le {{ publication.tempsPubl | date }}
                        dans la categorie </div>
                <div class="content">
                        <img src="{{ publication.imagepubl }}" width="300px" alt="">
                        <p>
                                {{ publication.descriptionPubl }}
                        </p>

                        <div class="row">

                                <form>
                                        <div class="col-8">
                                                <input type="text" />
                                        </div>
                                        <div class="col-2">
                                                <button type="submit">commenter</button>
                                        </div>
                                </form>

                                {% for commentaire in publication.commentaires %}
                                <div class="col-6">

                                </div>
                                {% endfor %}

                        </div>
                </div>
                <a href=" {{ path('delete_publ', {'id' : publication.id }) }} " class="btn btn-sm btn-outline-secondery"
                        onclick="return confirm ('attention ce ci va supprimer ')">Supprimer</a>
                <a href=" {{ path('modifier_blog', {'id' : publication.id }) }} " class="btn btn-primary">modifier</a>
                </div>

        </publication>
        {% endfor %}
</section>
{% endblock %}