{% extends "base.html.twig" %}
 

{% block body %}
<body> 
<section class="publication">
   

   {% for publication in publications %}
<publication>  
        <h2>{{ publication.titrePubl }}</h2>
        <div class="metadata">Ecrit le {{ publication.tempsPubl | date }}
                dans la categorie </div>
        <div class="content">
            <img src="http://placehold.it/350x150" alt="">
            <p>
                    {{ publication.descriptionPubl }}
            </p>
            
            <a href=" {{ path('delete_publ', {'id' : publication.id }) }} " class="btn btn-sm btn-outline-secondery"  onclick="return confirm ('attention ce ci va supprimer ')">Supprimer</a>
            <a href=" {{ path('modifier_blog', {'id' : publication.id }) }} " class="btn btn-primary">modifier</a>
    </div>
   
</publication>




{% endfor %}



    
</section>
</body>
{% endblock %}


