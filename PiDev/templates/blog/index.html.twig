{% extends "base.html.twig" %}
 

{% block body %}



<h1> Publications: <a href=" {{ path ("ajouter_blog")}} " class="btn btn-primary">Publier une publication</a></h1>
<body> 
<section class="publication">
   

   {% for publication in publications %}
<publication>  
        <h2>{{ publication.titrePubl }}</h2>
        <div class="metadata">Ecrit le {{ publication.tempsPubl | date }}
                dans la categorie de publications </div>
        <div class="content">
            <img src="{{publication.imagepubl}}" width="200px;" alt="">
            <p>
                    {{ publication.descriptionPubl }}
            </p>
            <a href="  {{ path('blog_show', {'id' : publication.id }) }} " class="btn btn-primary">lire la suite ({{publication.commentaires.count }}) </a>
          
    </div>
   
</publication>




{% endfor %}



    
</section>
</body>
{% endblock %}


